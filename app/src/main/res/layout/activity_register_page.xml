<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="exportkit.RegisterPage">

        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                   android:src="@drawable/ic_fond_login"
                   android:scaleType="fitXY"
        />
    <!-- ###############################    Le linear layout   #################################### -->
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"

        >

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/ic_etiket_logo"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/s_inscrire"
                      android:textSize="24sp"
                      android:fontFamily="@font/roboto_regular"
                      android:textStyle="bold"
                      android:textColor="@color/black"
            />


            <EditText android:layout_width="300dp" android:layout_height="50dp"
                      android:id="@+id/email_input_register"
                      android:inputType="textEmailAddress"
                      android:hint="@string/email"
                      android:textColorHint="#475569"
                      android:fontFamily="@font/roboto_regular"
                      android:backgroundTint="#CBD5E1"
            />
            <EditText android:layout_width="300dp" android:layout_height="50dp"
                      android:id="@+id/username_input_register"
                      android:inputType="text"
                      android:hint="@string/nom_d_utilisateur"
                      android:textColorHint="#475569"
                      android:fontFamily="@font/roboto_regular"
                      android:backgroundTint="#CBD5E1"
            />
            <EditText android:layout_width="300dp" android:layout_height="50dp"
                      android:id="@+id/password_register_input"
                      android:inputType="textPassword"
                      android:hint="@string/mot_de_passe"
                      android:textColorHint="#475569"
                      android:fontFamily="@font/roboto_regular"
                      android:backgroundTint="#CBD5E1"
            />
            <Button android:layout_width="300dp" android:layout_height="40dp"
                    android:id="@+id/register_button"
                    android:text="@string/s_inscrire"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/ic_shape_button_black"
                    android:textAllCaps="false"
                    tools:ignore="TouchTargetSizeCheck"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/s_inscrire_avec"
                      android:textSize="14sp"
                      android:textColor="#64748B"
                      android:fontFamily="@font/roboto_regular"
            />
            <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:id="@+id/googleSignInButton"
                         android:src="@drawable/ic_google_connexion"
                         android:background="@android:color/transparent"
                         android:contentDescription="@string/google_logo"
            />
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center_horizontal"
            >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/deja_un_compte"
                          android:textSize="14sp"
                          android:textColor="#828282"
                          android:fontFamily="@font/roboto_regular"
                />
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/se_connecter_button_gris"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        android:textColor="#828282"
                        android:fontFamily="@font/roboto_regular"
                        android:textAllCaps="false"
                />

            </LinearLayout>





        </LinearLayout>
    <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>