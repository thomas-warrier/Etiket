<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="exportkit.LoginPage">
    <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
               android:src="@drawable/ic_fond_login"
               android:contentDescription="image de fond"
               android:scaleType="fitXY"
    />
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/logo_etiket"
                   android:src="@drawable/ic_etiket_logo"
                   android:contentDescription="logo Etiket"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginTop="40dp"
        />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/connexion_text_login_page"
              android:text="@string/connexion"
              android:textSize="32sp"
              android:fontFamily="@font/roboto_bold"
              android:textColor="@color/black"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toBottomOf="@id/logo_etiket"
              android:layout_marginTop="100dp"
    />
    <EditText android:layout_width="350dp" android:layout_height="50dp"
              android:id="@+id/email_or_username_input"
              android:inputType="text"
              android:hint="@string/email_ou_nom_d_utilisateur"
              android:textColorHint="#475569"
              android:fontFamily="@font/roboto_regular"
              android:backgroundTint="#CBD5E1"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toBottomOf="@id/connexion_text_login_page"
              android:layout_marginTop="50dp"
              android:textColor="#000000"/>
    <EditText android:layout_width="350dp" android:layout_height="50dp"
              android:id="@+id/password_login_input"
              android:inputType="textPassword"
              android:hint="@string/mot_de_passe"
              android:textColorHint="#475569"
              android:fontFamily="@font/roboto_regular"
              android:backgroundTint="#CBD5E1"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toBottomOf="@id/email_or_username_input"
              android:layout_marginTop="30dp"
              android:textColor="#000000"/>
        <Button android:layout_width="300dp" android:layout_height="40dp"
                android:id="@+id/se_connecter_button"
                android:text="@string/se_connecter"
                android:textColor="@color/white"
                android:background="@drawable/ic_shape_button_black"
                android:fontFamily="@font/roboto_regular"
                android:textAllCaps="false"
                tools:ignore="TouchTargetSizeCheck"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/password_login_input"
                android:layout_marginTop="30dp"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/ou_se_connecter_avec"
                  android:id="@+id/ou_se_connecter_avec_text"
                  android:textSize="14sp"
                  android:textColor="#64748B"
                  android:fontFamily="@font/roboto_regular"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/se_connecter_button"
                  android:layout_marginTop="25dp"
        />
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:id="@+id/googleLogInButton"
                     android:src="@drawable/ic_google_connexion"
                     android:background="@android:color/transparent"
                     android:contentDescription="@string/google_logo"
                     app:layout_constraintRight_toRightOf="parent"
                     app:layout_constraintLeft_toLeftOf="parent"
                     app:layout_constraintTop_toBottomOf="@id/ou_se_connecter_avec_text"
                     android:layout_marginTop="10dp"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/pas_de_compte_text"
                  android:text="@string/pas_de_compte"
                  android:textSize="14sp"
                  android:textColor="#828282"
                  android:fontFamily="@font/roboto_regular"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintBottom_toTopOf="@id/button_switch_to_register_activity"
                  android:layout_marginBottom="5dp"
        />
        <Button android:layout_width="300dp" android:layout_height="40dp"
                android:id="@+id/button_switch_to_register_activity"
                android:text="@string/s_inscrire"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:background="@drawable/ic_shape_button_black"
                android:textAllCaps="false"
                tools:ignore="TouchTargetSizeCheck"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
        />




    <ProgressBar
            android:id="@+id/progressBar_login"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>