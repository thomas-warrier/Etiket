<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewimage_dynamic_ticket_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/image_dynamic_ticket_button"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/ic_ticket_nav"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/title_dynamic_ticket_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="Title"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#526581"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cardviewimage_dynamic_ticket_button"
            android:layout_marginLeft="10dp"

    />
    <TextView
            android:id="@+id/date_dynamic_ticket_button"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:text="Date"
            android:layout_height="wrap_content"
            android:textColor="#526581"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cardviewimage_dynamic_ticket_button"
            app:layout_constraintTop_toBottomOf="@id/title_dynamic_ticket_button"
            android:layout_marginLeft="10dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>